<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/content_login"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:background="@drawable/fondo2"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.tesca.dabbaapp.LoginActivity"
    tools:showIn="@layout/activity_login">

    <ImageView
        android:layout_width="300dp"
        android:layout_height="150dp"
        android:background="@drawable/dabba_logo"
        android:layout_marginBottom="50dp"
        />

    <Button
        android:id="@+id/emaillog"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="@string/deliverEmail"
        android:layout_marginBottom="20dp"
        android:onClick="goEmailLog"
        android:theme="@style/RaisedButtonDark"
        />

    <Button
        android:id="@+id/googlelog"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="@string/deliverGoogle"
        android:onClick="GoGoogleLog"
        android:theme="@style/RaisedButtonDark"
        />

</LinearLayout>
