<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.tesca.dabbaapp">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".DeliverMainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        //Jerarquia padre para DeliveryID
        <activity
            android:name=".DeliverIDActivity"
            android:parentActivityName=".DelivermanLoginActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".DelivermanLoginActivity" />
        </activity>

        <activity android:name=".DelivermanLoginActivity"
            android:parentActivityName=".DeliverMainActivity">

            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".DeliverMainActivity" />

        </activity>
        <activity
            android:name=".ReferenciaActivity"
            android:label="@string/title_activity_referencia"
            android:theme="@style/AppTheme.NoActionBar">
        </activity>
    </application>

</manifest>